@model eudaci.Models.Settings

@{
    ViewData["Title"] = "Create";

    var countries = (IEnumerable<eudaci.Models.Country>)ViewData["countries"];
    var user = (eudaci.Models.ApplicationUser)ViewData["user"];
}

<h1>Create</h1>

<h4 class="mt-4">Country</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AssociateCountry">
            <select class="custom-select mb-2 mr-sm-2" name="country">
                <option selected value="">Choose...</option>

                @foreach (var item in countries)
                {
                    @if (user.Country.Name == @item.Name)
                    {
                        <option selected value="@item.Name">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Name">@item.Name</option>
                    }
                }
            </select>

            <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </form>
    </div>
</div>

<h4 class="mt-4">Settings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Notifications" /> @Html.DisplayNameFor(model =>
                    model.Notifications)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Sugestions" /> @Html.DisplayNameFor(model =>
                    model.Sugestions)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NotifyVaccination" /> @Html.DisplayNameFor(model =>
                    model.NotifyVaccination)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NotifyPandemic" /> @Html.DisplayNameFor(model =>
                    model.NotifyPandemic)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
