@model eudaci.Models.Settings

@{
    ViewData["Title"] = "Details";

    var user = (eudaci.Models.ApplicationUser)ViewData["user"];
}

<h1>Details</h1>

<div>
    <h4 class="mt-4">Country</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            @user.Country.Name
        </dd>
    </dl>
</div>

<div>
    <h4 class="mt-4">Settings</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notifications)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notifications)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sugestions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sugestions)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotifyVaccination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotifyVaccination)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotifyPandemic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotifyPandemic)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="model.Id">Delete</a>
</div>
